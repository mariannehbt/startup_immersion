<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= @user.email%>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :situation %>
    <%= form.select :situation_id, options_from_collection_for_select(Situation.all, :id, :title, @user.situation_id), { :prompt => 'Choose from list :'} %>
  </div>

  <div class="field">
    <%= form.label :formation %>
    <%= form.text_field :formation %>
  </div>

  <div class="field">
    <%= form.label :activity %>
    <%= form.select :activity_id, options_from_collection_for_select(Activity.all, :id, :name, @user.activity_id), { :prompt => 'Choose from list :'} %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :linked_in_url %>
    <%= form.text_field :linked_in_url %>
  </div>

  <div class="field">
    <%= form.label :newsletter %>
    <%= form.text_field :newsletter %>
  </div>

  <div class="field">
    <% if current_user && current_user.admin? %>
      <%= form.label :admin %>
      <%= form.select :admin, [['Admin', true], ['User', false]] %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
