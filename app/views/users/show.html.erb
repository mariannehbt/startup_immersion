<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %></br>
  <%= link_to "Edit email / password", edit_user_registration_path %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Situation:</strong>
  <% if @user.situation == nil %>
    <%= @user.situation %>
  <% else %>
    <%= @user.situation.title %>
  <% end %>
</p>

<p>
  <strong>Formation:</strong>
  <%= @user.formation %>
</p>

<p>
  <strong>Activity:</strong>
  <% if @user.activity == nil %>
    <%= @user.activity %>
  <% else %>
    <%= @user.activity.name %>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user.description %>
</p>

<p>
  <strong>Linkedin:</strong>
  <%= @user.linked_in_url %>
</p>

<p>
  <strong>Newsletter:</strong>
  <%= @user.newsletter %>
</p>

<p>
  <strong>Member since:</strong>
  <%= @user.created_at %>
</p>

<p>
  <strong>Last profile update:</strong>
  <%= @user.updated_at %>
</p>

<% if @user.first_name != nil %>
  <h2>Registration of <%= @user.first_name %> :</h2>
<% else %>
   <h2>Registration of this user :</h2>
<% end %>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Attendance</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.events.each do |user_attendances| %>
      <tr>
        <td><%= link_to "#{user_attendances.title} &raquo;".html_safe, event_path(user_attendances), :class =>'btn btn-primary' %></td>
        <td><%= user_attendances.start_datetime %></td>
        <td><%= link_to "Details &raquo;".html_safe, event_attendance_path(user_attendances, Attendance.find_by(user_id: @user, event_id: user_attendances).id), :class =>'btn btn-primary' %></td>
        <td>Waiting for admin confirmation</td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Photo de profil</h3>
<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore de photo de profil lié à cet utilisateur ===</p>
<%end%>
<h3>Changer de photo de profil ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "Mettre à jour" %>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<% if current_user.admin? %>
  <%= link_to 'Back', :back %>
<% else %>
  <%= link_to 'Back', :root %>
<% end %>
