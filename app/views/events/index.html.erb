<body>
<p id="notice"><%= notice %></p>

<!-- <div class="container-fluid"> -->

<h1 class="my-5 text-center">- Les immersions -</h1>




<div class ="container">
<div class="gallery" id="gallery">

  <!-- Grid column -->
  <div class="mb-3  pics animation mdb-lightbox-ui ">
    <% @events.each do |event| %>
    <img class="card-img-top" src=<%= asset_path 'photo1.jpg' %> alt="Card image cap">
    <div class="card-header center"><%= event.title %></div>
    <div class="card-body">
        <ul class="none">

          <li><%= event.start_datetime %></li>
          <li><%= event.duration %> min</li><br />
          <li class="card-text"><%= event.description %></li><br />

          <li><%= event.short_location %></li>
          <li><%= event.adress %></li>

           <li> <!-- if user = register -->
            <%= event.zip_code %>
            <%= event.city %>
          </li>
        </ul>

      </div>

      <div class="card-footer center">
        <p class="card-text center"> <a class="btn btn-secondary btn-md" href="#" role="button">Subscribe</a></p>
        <!-- if user = admin -->
        <%= link_to 'Show', event %>
        <%= link_to 'Edit', edit_event_path(event) %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>


</div>
<%= link_to 'New Event', new_event_path %> 
<script src="app/assets/javascripts/gallery.js"></script>

</body>
