<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start datetime</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Short location</th>
      <th>Adress</th>
      <th>Zip code</th>
      <th>City</th>
      <th>Startup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_datetime %></td>
        <td><%= event.duration %></td>
        <td><%= event.description %></td>
        <td><%= event.short_location %></td>
        <td><%= event.adress %></td>
        <td><%= event.zip_code %></td>
        <td><%= event.city %></td>
        <td><%= event.startup.name %></td>
        <td><%= link_to 'Show', event %></td>
        <% if current_user && current_user.admin? %>
          <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin? %>
  <%= link_to 'New Event', new_admin_event_path %>
  <%= link_to 'Back', :admin_root %>
<% else %>
  <%= link_to 'Back', :root %>
<% end %>















