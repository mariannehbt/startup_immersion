<h1>RESULTATS DE LA RECHERCHE</h1>  

<div class ="container">
    <div class="row " style="align-items:stretch">
        <% @events.each do |event| %>
                <div class=" p-3 col-lg-4 col-sm-12 ">
                    <div class="card p-3 shadow">
                        <img class="card-img-top  img-border" src="<%= asset_path 'photo2.jpg' %>" alt="Card image cap"/>
                        <div class="center mt-2"><%= event.title.upcase %></div>
                        <div class="card-body">
                            <ul class="none">
                                <li><%= event.start_datetime %></li>
                                <li><%= event.duration %> min</li><br />
                                <li class="card-text"><%= event.description %></li><br />
                                <li><%= event.short_location %></li>
                                <li><%= event.adress %></li>
                                <li> <!-- if user = register -->
                                <%= event.zip_code %>
                                <%= event.city %>
                                </li>
                            </ul><br />
                        </div>
                        <div class="card-foot center">
                            <p class="card-text">
                            <%= link_to "EN VOIR +", event_path(event.id), :class =>'btn btn-sm btn-primary'%>
                            <%= link_to "SE PRÃ‰-INSCRIRE", "#", :class =>'btn btn-sm btn-primary'%>
                            </p><br />
                        </div>
                    </div>
                </div>
        <% end %>
    </div>
</div>

